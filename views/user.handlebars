<!--container for page-->
<div class="container">

  <!-- jumbotron with logo-->
  <div id="jumbotronProfile" class="jumbotron">
  </div>

  <!--user info card-->
  <div class="card card-1 col-md-4 offset-lg-4">
    <div class="row">
      <div class="col-md-6">
        <img id="userImage" src="https://via.placeholder.com/1000x2000" class="card-img" alt="userProfileImage">
        <!--POSSIBLE UPLOAD BUTTON HERE-->
        <form class="mt-1" action="/upload" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <input type="file" name="file" id="input-files" class="form-control-file border" />
            <button id="submitButton" type="submit" class="btn btn-default btn-sm">
              <i class="fa fa-camera-retro">Submit</i>
            </button>
          </div>
        </form>
      </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 id="userName" class="card-title">{{ userInfo.firstName}}</h5>
          <p class="card-text">Member Since: {{ memberSince }}</p>
          <p>{{userInfo.firstName}} is currently reading:
            {{#each currentList}}
            <p class={{id}}>{{title}}
              {{/each}}
              <!--Change title of currently reading to just the book image?-->
            </p>
            <!--Buttons for user interaction-->
            <p> <button id={{userInfo.id}} type="button" class="btn btn-default btn-sm follow-btn">
                <i class="fa fa-user-plus">Add Friend</i>
              </button>
              <button class="btn btn-default btn-sm" id="btnFollow" data-toggle="modal" data-target="#myModal1"
                type="button">
                <i class="fa fa-users">Followers</i>
              </button>
              <button class="btn btn-default btn-sm" id="btnFollow" data-toggle="modal" data-target="#myModal3"
                type="button">
                <i class="fa fa-users">Following</i>
              </button>
              {{#each userInfo.followees}}
              <div>{{this.firstName}} {{this.lastName}}</div>
              {{/each}}
            </p>
        </div>
      </div>
    </div>
  </div>

  <!--books area-->
  <!--Have Read Card-->
  <div class="row">
    <div class="col-sm-6 mt-5">
      <div class="card">
        <div class="card-header">Have Read</div>
        <div class="card-body" id="cardBody2">
          <ul class='future-list'>
            {{#each pastList}}
            <p class={{id}}>{{title}}
              {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <!--Want to Read Card-->
    <div class="col-sm-6 mt-5">
      <div class="card">
        <div class="card-header">Want to Read</div>
        <div class="card-body" id="cardBody2">
          <ul class='future-list'>
            {{#each futureList}}
            <p class={{id}}>{{title}}
              {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

